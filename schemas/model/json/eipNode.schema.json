{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/codice/keip-canvas/schemas/v0.2.0/eipNode.schema.json",
  "title": "EipNode",
  "description": "An instance of an 'EipComponent' as a node in the flow diagram",
  "type": "object",
  "required": [
    "id",
    "eipId",
    "role",
    "connectionType"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "eipId": {
      "$ref": "#/$defs/EipId"
    },
    "label": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "role": {
      "$ref": "eipRole.schema.json"
    },
    "connectionType": {
      "$ref": "connectionType.schema.json"
    },
    "attributes": {
      "$ref": "#/$defs/Attributes"
    },
    "children": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/EipChildNode"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "EipId": {
      "description": "A combination of fields uniquely identifying a component in an 'EipComponentDefinition'",
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "namespace",
        "name"
      ]
    },
    "Attributes": {
      "description": "A map of EIP attributes belonging to the node",
      "type": "object",
      "additionalProperties": {
        "$ref": "attributeType.schema.json"
      }
    },
    "EipChildNode": {
      "description": "An instance of an 'EipChildElement'. Can recursively contain more child nodes as well as attributes of its own.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "attributes": {
          "$ref": "#/$defs/Attributes"
        },
        "children": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/EipChildNode"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}