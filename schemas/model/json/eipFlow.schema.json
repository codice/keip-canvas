{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/codice/keip-canvas/schemas/v0.2.0/eipFlow.schema.json",
  "title": "EipFlow",
  "description": "A representation of an EIP flow diagram as a collection of nodes and their corresponding edges",
  "type": "object",
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "$ref": "eipNode.schema.json"
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/FlowEdge"
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "FlowEdge": {
      "description": "A single edge in the flow diagram connecting two nodes",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "source": {
          "type": "string"
        },
        "target": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "default",
            "discard"
          ]
        }
      },
      "required": [
        "id",
        "source",
        "target"
      ]
    }
  }
}
